<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="x_pract_4.Page1">
    <ContentPage.Content>
        <StackLayout>
            <CheckBox x:Name="rbt_AutoOn" CheckedChanged="rbt_AutoOn_CheckedChanged"/>
            <Label Text="Автоматический расчет" FontSize="Subtitle"/>
            <Frame  BorderColor="Aqua">
                <StackLayout x:Name="frame1">
                    <Label Text="Введите название месяца:" FontSize="Large"/>
                    <Entry x:Name="etr_FieldMonth" TextChanged="etr_FieldMonth_TextChanged"/>
                    <Label Text="Время года:" FontSize="Large"/>
                    <Entry x:Name="etr_FieldPartYear" IsReadOnly="True"/>
                </StackLayout>
            </Frame>
        </StackLayout>
        
    </ContentPage.Content>
    
        
</ContentPage>